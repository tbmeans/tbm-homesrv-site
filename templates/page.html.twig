<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ metatitle }}</title>
    <style>
      body {
        font-family: Verdana, Arial, Helvetica, sans-serif;
      }
      h1 {
        color: white;
      }
      img {
        width: 25%;
      }
      .hero {
        background-color: slateblue;
        text-align: center;
        height: 12rem;
        padding-top: 4rem;
      }
      .nav-list {
        list-style-type: none;
        padding-top: 5rem;
        text-align: left;
        padding-left: 2rem;
      }
      .nav-item {
        display: inline-block;
      }
      .nav-item > a {
        color: white;
        text-decoration: none;
      }
      .card-container {
        display: flex;
        flex-wrap: wrap;
        padding: 2rem;
      }
      .card {
        width: 100%;
        height: 10rem;
        padding-top: 3rem;
        text-align: center;
      }
      @media (min-width: 768px) {
        img {
          width: 50%;
        }
        .card {
          width: 25%;
        }
      }
    </style>
  </head>
  <body>
    <div class="hero">
      <h1>{{ pagetitle }}</h1>
      <nav>
        <ul class="nav-list">
          <li class="nav-item">
            <a href="/">Home</a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="card-container">
    {% for card in cards %}
      <div class="card">
        {% if card.iname %}
          <img
            src="{{ asset('img/' ~ card.iname) }}"
            alt="{{ card.ialt }}"
          />
        {% endif %}
        {% if card.linkIsExt %}
          <a href="{{ absolute_url(card.link) }}">
        {% else %}
          <a href="/{{ card.link }}">
        {% endif %}
          <h3>{{ card.name }}</h3>
        </a>
        <p>{{ card.misc }}</p>
      </div>
    {% endfor %}
    </div>
  </body>
</html>
